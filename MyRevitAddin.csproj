<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- Target .NET 8 for Windows desktop environment -->
    <TargetFramework>net8.0-windows</TargetFramework>

    <!-- Build a DLL (library) -->
    <OutputType>Library</OutputType>

    <!-- Assembly and namespace names -->
    <AssemblyName>MyRevitAddin</AssemblyName>
    <RootNamespace>MyRevitAddin</RootNamespace>

    <!-- Output folder -->
    <OutputPath>bin\Release\</OutputPath>

    <!-- Ensure correct architecture and behavior -->
    <PlatformTarget>x64</PlatformTarget>
    <LangVersion>latest</LangVersion>
    <Nullable>disable</Nullable> <!-- You can set 'enable' if you want null-safety -->
    <ImplicitUsings>disable</ImplicitUsings>
    <UseWindowsForms>true</UseWindowsForms>
  </PropertyGroup>

  <!-- Revit 2025 API references (must be v25.x DLLs from your install) -->
  <ItemGroup>
    <Reference Include="RevitAPI">
      <HintPath>RevitAPI.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="RevitAPIUI">
      <HintPath>RevitAPIUI.dll</HintPath>
      <Private>false</Private>
    </Reference>
  </ItemGroup>

  <!-- Source files -->
  <ItemGroup>
    <Compile Include="HelloCommand.cs" />
  </ItemGroup>

</Project>
