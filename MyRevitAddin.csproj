<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- Revit 2025 runs on .NET 8 -->
    <TargetFramework>net8.0-windows</TargetFramework>
    <OutputType>Library</OutputType>

    <AssemblyName>MyRevitAddin</AssemblyName>
    <RootNamespace>MyRevitAddin</RootNamespace>
    <OutputPath>bin\Release\</OutputPath>

    <!-- 64-bit only -->
    <PlatformTarget>x64</PlatformTarget>
    <LangVersion>latest</LangVersion>
    <Nullable>disable</Nullable>
    <ImplicitUsings>disable</ImplicitUsings>
    <UseWindowsForms>true</UseWindowsForms>
  </PropertyGroup>

  <!-- Revit 2025 API refs (v25.* from your install/zip) -->
  <ItemGroup>
    <Reference Include="RevitAPI">
      <HintPath>RevitAPI.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="RevitAPIUI">
      <HintPath>RevitAPIUI.dll</HintPath>
      <Private>false</Private>
    </Reference>
  </ItemGroup>

  <!-- No <Compile Include=...> needed; SDK includes *.cs automatically -->

</Project>
